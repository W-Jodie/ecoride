          <div class="text-warning">
            <i class="bi bi-star-fill"></i>
            <i class="bi bi-star-fill"></i>
            <i class="bi bi-star-fill"></i>
            <i class="bi bi-star-half"></i>
            <i class="bi bi-star"></i>
          </div>
        </div>

        <!-- Colonne 2 -->
        <div class="col-md-4">
          <div class="d-flex flex-column gap-2">
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Date de départ</strong><br />
              <small>{{trajet.date_depart}}</small>
            </div>
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Heure de départ</strong><br />
              <small>{{trajet.heure_depart}}</small>
            </div>
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Nombre de places</strong><br />
              <small>{{trajet.places}}</small>
            </div>
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Type</strong><br />
              <span class="badge rounded-pill border-0 {{trajet.eco ? ' bg-success ' : ' bg-light'}}">{{trajet.eco ? 'Ecologique' : 'Standard'}}</span>
            </div>
          </div>
        </div>

        <!-- Colonne 3 -->
        <div class="col-md-5">
          <div class="d-flex flex-column gap-2">
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Date d’arrivée</strong><br />
              <small>{{trajet.date_arrivee}}</small>
            </div>
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Heure d’arrivée</strong><br />
              <small>{{trajet.heure_arrivee}}</small>
            </div>
            <div class="p-2 border rounded bg-success text-center shadow bg-opacity-25">
              <strong>Prix</strong><br />
              <small>{{trajet.prix}} €</small>
            </div>

            <a href="{{path('app_front_carpooling_show', { 'id' : 1})}}" class="btn btn-primary btn-lg w-100">Détails</a>
          </div>
        </div>
      </div>
