{% for trajet in trajets %}

<div class="container my-4">
      <div class="row border rounded shadow-sm p-3 {{ trajet.eco ? 'bg-success bg-opacity-25' : 'bg-light'   }}">
                <!-- Colonne 1 -->
        <div class="col-md-3 text-center">
          <img
            src="{{asset('assets/img/' ~ (trajet.sexe == 'F' ? 'marie.jpg' : 'joaquim.jpg') )}}"
            class="img-fluid rounded mb-2"
            alt="Photo conducteur"
          />
