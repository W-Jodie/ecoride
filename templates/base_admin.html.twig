<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Dashboard Admin{% endblock %}</title>

    {# SB Admin 2 CSS #}
    <link href="{{ asset('admin/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('admin/css/sb-admin-2.min.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body id="page-top">

    {# Page Wrapper #}
    <div id="wrapper">

        {# Sidebar - tu peux créer un _sidebar.html.twig si tu veux #}
        {% block sidebar %}
        {% include 'admin/partials/_slides/_sidebar.html.twig' %}
        {% endblock %}

        {# Content Wrapper #}
        <div id="content-wrapper" class="d-flex flex-column">

            {# Main Content #}
            <div id="content">

                {# Topbar - tu peux créer un _topbar.html.twig si tu veux #}
                {% block topbar %}
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <h1 class="h3 mb-0 text-gray-800">Tableau de bord</h1>
                </nav>
                {% endblock %}

                {# Page Content #}
                <div class="container-fluid">
                    {% block body %}{% endblock %}
                </div>

            </div>

            {# Footer #}
            {% block footer %}
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>© EcoRide 2025</span>
                    </div>
                </div>
            </footer>
            {% endblock %}

        </div>
    </div>

    {# Scroll to Top Button#}
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    {# SB Admin 2 JS #}
    <script src="{{ asset('admin/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('admin/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('admin/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('admin/js/sb-admin-2.min.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
