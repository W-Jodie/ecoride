{% extends 'base_admin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
           
            <tr>
                <th>Prenom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th>Date Anniversaire</th>
                <td>{{ user.dateBirthdayAt ? user.dateBirthdayAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.picture }}</td>
            </tr>
        </tbody>
    </table>

    

    <a class ="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
    <br>
    <br>
    {{ include('admin/user/_delete_form.html.twig') }}
    <br>
<a class ="btn btn-primary"  href="{{ path('app_user_index') }}">Retour Ã  la liste</a>
    
{% endblock %}
